@model UserViewModel

@{
    ViewData["Title"] = "AddUserPage";
}

<form method="post">
    <div class="form-group">
        <label>UserId</label>
        <input asp-for="UserId" class="form-control" placeholder="UserId">
    </div> <br>
    <div class="form-group">
        <label>FirstName</label>
        <input asp-for="FirstName" class="form-control" placeholder="FirstName">
    </div> <br>
    <div class="form-group">
        <label>LastName</label>
        <input asp-for="LastName" class="form-control" placeholder="LastName">
    </div> <br>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" placeholder="Email">
    </div>
    <div class="form-group">
        <label>BirthDate</label>
        <input asp-for="BirthDate" class="form-control" placeholder="BirthDate">
    </div> <br>
    <div class="form-group">
        <label>AddressId</label>
        <input asp-for="AddressId" class="form-control" placeholder="AddressId">
    </div> <br>
    <button type="submit" class="btn btn-primary">Submit</button>
</form> <br>

@{
    await Html.RenderPartialAsync("UserActions");
}