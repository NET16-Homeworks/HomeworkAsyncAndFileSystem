@model IEnumerable<AddressViewModel>

@{
    ViewData["Title"] = "AddressesPage";
}

<h1>Addresses</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">AddressId</th>
            <th scope="col">City</th>
            <th scope="col">Street</th>
            <th scope="col">HouseNumber</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 1;
        }
        @foreach (var item in Model)
        {
                <tr>
                    <td>@(count++)</td>
                    <td>@item.AddressId</td>
                    <td>@item.City</td>
                    <td>@item.Street</td>
                    <td>@item.HouseNumber</td>
                </tr>
        }
    </tbody>
</table>
<br>

@{
    await Html.RenderPartialAsync("UserActions");
}