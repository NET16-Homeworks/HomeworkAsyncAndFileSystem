@model List<CustomerModel>

@{
    ViewData["Title"] = "GetCustomers";
}

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Ordered Product Id</th>
            <th>Удалить</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>@customer.OrderedProductId</td>
                <td>@Html.ActionLink("Удалить", "DeleteItem", "Home", new{index =  Model.IndexOf(customer), entity = "customer"})</td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Назад", "Index")